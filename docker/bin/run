#!/bin/bash

cd $(dirname $0)/../..

CONFIGDIR=$PWD/docker/etc/phpmyadmin

if [[ ! -d $CONFIGDIR ]]; then
   mkdir -p $CONFIGDIR
fi

if [[ ! -f $CONFIGDIR/config.inc.php ]]; then
    touch $CONFIGDIR/config.inc.php
fi


docker rm -f phpmyadmin > /dev/null 2>&1

docker run -d \
    --name phpmyadmin \
    -v $PWD/docker/etc/phpmyadmin/config.inc.php:/www/phpmyadmin/config.inc.php \
    -v $PWD/docker/bin/start.sh:/start.sh \
    -p 3380:80 \
    timhaak/phpmyadmin-alpine
